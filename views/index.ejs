<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/recipes" class="logo">MyRecipe</a>
            <div class="nav-links">
                <a href="/recipes" class="active">Home</a>
                <a href="/recipes/add">Add recipe</a>
                <% if (isAuthenticated) { %>
                    <div class="profile-dropdown">
                        <button class="profile-btn" onclick="toggleDropdown(event)">
                            <span class="profile-username">
                                <%= username %>
                            </span>
                            <svg height="20" width="20" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd"
                                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                    clip-rule="evenodd" />
                            </svg>
                        </button>
                        <div class="dropdown-content" id="profileDropdown">
                            <a href="/logout">Logout</a>
                        </div>
                    </div>
                    <% } else { %>
                        <a href="/login">Login</a>
                        <% } %>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1 class="section-title">Latest recipes</h1>
        <div class="recipe-list">
            <% recipes.forEach(function(recipe) { %>
                <a href="/recipes/<%= recipe._id %>" class="recipe-card-link">
                    <div class="recipe-card">
                        <% if (recipe.image) { %>
                            <img src="/<%= recipe.image.replace('\\', '/') %>" alt="Recipe Image" class="recipe-image">
                            <% } %>
                                <div class="recipe-card-content">
                                    <h2>
                                        <%= recipe.title %>
                                    </h2>
                                    <p class="recipe-meta">By Admin | <%= recipe.createdAt.toLocaleDateString() %>
                                    </p>
                                    <p>
                                        <%= recipe.content.length> 120 ? recipe.content.substring(0, 120) + '...' :
                                            recipe.content %>
                                    </p>
                                    <div class="recipe-actions">
                                        <span class="read-more-btn">Read More</span>
                                        <% if (isAuthenticated) { %>
                                            <a href="/recipes/update?updateId=<%= recipe._id %>" class="edit-btn">Edit</a>
                                            <a href="/recipes/delete/<%= recipe._id %>" class="delete-btn"
                                                onclick="return confirm('Are you sure you want to delete this recipe?');">Delete</a>
                                            <% } %>
                                    </div>
                                </div>
                    </div>
                </a>
                <% }) %>
        </div>
    </div>
    
    <script>
        function toggleDropdown(event) {
            event.stopPropagation();
            var dropdown = document.getElementById('profileDropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }
        document.addEventListener('click', function () {
            var dropdown = document.getElementById('profileDropdown');
            if (dropdown) dropdown.style.display = 'none';
        });
    </script>
</body>

</html>