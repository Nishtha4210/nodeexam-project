<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Recipe</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/recipes" class="logo">MyRecipe</a>
            <div class="nav-links">
                <a href="/recipes">Home</a>
                <% if (isAuthenticated) { %>
                    <a href="/recipes/add">Add Recipe</a>
                    <div class="profile-dropdown">
                        <button class="profile-btn" onclick="toggleDropdown(event)">
                            <span class="profile-username"><%= username %></span>
                            <svg height="20" width="20" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                        </button>
                        <div class="dropdown-content" id="profileDropdown">
                            <a href="/logout">Logout</a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>
    <div class="form-container">
        <h1>Edit Recipe</h1>
        <form action="/recipes/add" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="updateId" value="<%= recipe._id %>">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%= recipe.title %>" required>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="content" name="content" rows="6" required><%= recipe.content %></textarea>
            </div>
            <div class="form-group">
                <label>Current Image</label><br>
                <% if (recipe.image) { %>
                    <img src="/<%= recipe.image.replace('\\', '/') %>" alt="Current Image" class="recipe-image" style="max-width:200px; height: auto; border-radius: 8px; margin-top: 8px;">
                <% } else { %>
                    <span>No image</span>
                <% } %>
            </div>
            <div class="form-group">
                <label for="image">Change Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <button type="submit" class="btn">Update Recipe</button>
        </form>
        <a href="/recipes" class="back-link" style="display: block; text-align: center; margin-top: 20px;">Back to recipes</a>
    </div>
   
     <script>
        function toggleDropdown(event) {
          event.stopPropagation();
          var dropdown = document.getElementById('profileDropdown');
          dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }
        document.addEventListener('click', function() {
          var dropdown = document.getElementById('profileDropdown');
          if (dropdown) dropdown.style.display = 'none';
        });
      </script>
</body>
</html>